---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Blog | Pinsky Studio - Art Process & Updates">
    <main id="content" class="pt-16">
        <div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <section class="py-10">
                <h1
                    class="mb-5 text-xl font-medium text-gray-800 dark:text-neutral-200"
                >
                    Blog
                </h1>

                <!-- Featured Post -->
                <article class="group mb-12">
                    <div
                        class="aspect-[16/9] rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                    >
                        <img
                            src="/placeholder-blog1.jpg"
                            alt="Blog Post Cover"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                    </div>
                    <div class="mt-4">
                        <div
                            class="flex items-center gap-x-2 text-xs text-gray-500 dark:text-neutral-500"
                        >
                            <span>Process</span>
                            <span>•</span>
                            <time>April 15, 2024</time>
                        </div>
                        <h2
                            class="mt-2 text-xl font-medium text-gray-800 dark:text-neutral-200"
                        >
                            The Evolution of Recursive Realities: A Technical
                            Deep Dive
                        </h2>
                        <p
                            class="mt-2 text-sm text-gray-600 dark:text-neutral-400"
                        >
                            Exploring the technical challenges and breakthroughs
                            in creating the latest series of algorithmic
                            artworks, from custom plotter development to
                            generative algorithms.
                        </p>
                        <a
                            href="#"
                            class="mt-4 inline-flex items-center text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
                        >
                            Read more
                            <svg
                                class="w-4 h-4 ml-1"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </a>
                    </div>
                </article>

                <!-- Recent Posts -->
                <div class="space-y-8">
                    <h2
                        class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                    >
                        Recent Posts
                    </h2>
                    <div class="space-y-6">
                        <article class="group">
                            <div
                                class="aspect-[16/9] rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                            >
                                <img
                                    src="/placeholder-blog2.jpg"
                                    alt="Blog Post Cover"
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="mt-4">
                                <div
                                    class="flex items-center gap-x-2 text-xs text-gray-500 dark:text-neutral-500"
                                >
                                    <span>Exhibition</span>
                                    <span>•</span>
                                    <time>April 10, 2024</time>
                                </div>
                                <h3
                                    class="mt-2 text-lg font-medium text-gray-800 dark:text-neutral-200"
                                >
                                    Behind the Scenes: Digital Horizons
                                    Exhibition
                                </h3>
                                <p
                                    class="mt-2 text-sm text-gray-600 dark:text-neutral-400"
                                >
                                    A look at the preparation and installation
                                    of the latest exhibition, featuring new
                                    works and interactive elements.
                                </p>
                                <a
                                    href="#"
                                    class="mt-4 inline-flex items-center text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
                                >
                                    Read more
                                    <svg
                                        class="w-4 h-4 ml-1"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                </a>
                            </div>
                        </article>

                        <article class="group">
                            <div
                                class="aspect-[16/9] rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                            >
                                <img
                                    src="/placeholder-blog3.jpg"
                                    alt="Blog Post Cover"
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                            <div class="mt-4">
                                <div
                                    class="flex items-center gap-x-2 text-xs text-gray-500 dark:text-neutral-500"
                                >
                                    <span>Research</span>
                                    <span>•</span>
                                    <time>April 5, 2024</time>
                                </div>
                                <h3
                                    class="mt-2 text-lg font-medium text-gray-800 dark:text-neutral-200"
                                >
                                    Exploring Mathematical Patterns in Nature
                                </h3>
                                <p
                                    class="mt-2 text-sm text-gray-600 dark:text-neutral-400"
                                >
                                    How natural systems inspire algorithmic art:
                                    from Fibonacci sequences to fractal
                                    patterns.
                                </p>
                                <a
                                    href="#"
                                    class="mt-4 inline-flex items-center text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
                                >
                                    Read more
                                    <svg
                                        class="w-4 h-4 ml-1"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                </a>
                            </div>
                        </article>
                    </div>
                </div>

                <!-- Categories -->
                <div class="mt-12">
                    <h2
                        class="text-sm font-medium text-gray-800 dark:text-neutral-200 mb-4"
                    >
                        Categories:
                    </h2>
                    <div class="flex flex-wrap gap-2">
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            All
                        </button>
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            Process
                        </button>
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            Exhibitions
                        </button>
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            Research
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>

