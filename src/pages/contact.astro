---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Pinsky Studio - Get in Touch">
    <main id="content" class="pt-16">
        <div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <section class="py-10">
                <h1
                    class="mb-5 text-xl font-medium text-gray-800 dark:text-neutral-200"
                >
                    Contact
                </h1>

                <div class="space-y-8">
                    <!-- Contact Form -->
                    <div>
                        <h2
                            class="text-lg font-medium text-gray-800 dark:text-neutral-200 mb-4"
                        >
                            Send a Message
                        </h2>
                        <form class="space-y-4">
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1"
                                >
                                    Name
                                </label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-neutral-800 dark:border-neutral-700 dark:text-white"
                                    required
                                />
                            </div>
                            <div>
                                <label
                                    for="email"
                                    class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1"
                                >
                                    Email
                                </label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-neutral-800 dark:border-neutral-700 dark:text-white"
                                    required
                                />
                            </div>
                            <div>
                                <label
                                    for="subject"
                                    class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1"
                                >
                                    Subject
                                </label>
                                <select
                                    id="subject"
                                    name="subject"
                                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-neutral-800 dark:border-neutral-700 dark:text-white"
                                    required
                                >
                                    <option value="">Select a subject</option>
                                    <option value="inquiry"
                                        >General Inquiry</option
                                    >
                                    <option value="commission"
                                        >Commission Request</option
                                    >
                                    <option value="exhibition"
                                        >Exhibition Opportunity</option
                                    >
                                    <option value="press">Press Inquiry</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div>
                                <label
                                    for="message"
                                    class="block text-sm font-medium text-gray-700 dark:text-neutral-300 mb-1"
                                >
                                    Message
                                </label>
                                <textarea
                                    id="message"
                                    name="message"
                                    rows="4"
                                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:bg-neutral-800 dark:border-neutral-700 dark:text-white"
                                    required></textarea>
                            </div>
                            <button
                                type="submit"
                                class="w-full px-4 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 dark:bg-neutral-800 dark:text-white dark:hover:bg-neutral-700 transition-colors"
                            >
                                Send Message
                            </button>
                        </form>
                    </div>

                    <!-- Additional Contact Info -->
                    <div>
                        <h2
                            class="text-lg font-medium text-gray-800 dark:text-neutral-200 mb-4"
                        >
                            Other Ways to Connect
                        </h2>
                        <div class="space-y-4">
                            <div class="flex items-start gap-x-3">
                                <svg
                                    class="w-5 h-5 text-gray-500 dark:text-neutral-400 mt-0.5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                                <div>
                                    <p
                                        class="text-sm text-gray-600 dark:text-neutral-400"
                                    >
                                        Email
                                    </p>
                                    <a
                                        href="mailto:bregy@minsky.cc"
                                        class="text-sm text-gray-900 dark:text-white hover:underline"
                                    >
                                        bregy@minsky.cc
                                    </a>
                                </div>
                            </div>
                            <div class="flex items-start gap-x-3">
                                <svg
                                    class="w-5 h-5 text-gray-500 dark:text-neutral-400 mt-0.5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"
                                    ></path>
                                </svg>
                                <div>
                                    <p
                                        class="text-sm text-gray-600 dark:text-neutral-400"
                                    >
                                        Website
                                    </p>
                                    <a
                                        href="https://pinsky.studio"
                                        class="text-sm text-gray-900 dark:text-white hover:underline"
                                        target="_blank"
                                        rel="noopener noreferrer"
                                    >
                                        pinsky.studio
                                    </a>
                                </div>
                            </div>
                            <div class="flex items-start gap-x-3">
                                <svg
                                    class="w-5 h-5 text-gray-500 dark:text-neutral-400 mt-0.5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
                                    ></path>
                                </svg>
                                <div>
                                    <p
                                        class="text-sm text-gray-600 dark:text-neutral-400"
                                    >
                                        Social Media
                                    </p>
                                    <div class="flex gap-x-4 mt-1">
                                        <a
                                            href="https://x.com/pinsky_three"
                                            class="text-sm text-gray-900 dark:text-white hover:underline"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                        >
                                            X
                                        </a>
                                        <a
                                            href="https://www.instagram.com/pinsky_three"
                                            class="text-sm text-gray-900 dark:text-white hover:underline"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                        >
                                            Instagram
                                        </a>
                                        <a
                                            href="https://www.linkedin.com/in/bregy/"
                                            class="text-sm text-gray-900 dark:text-white hover:underline"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                        >
                                            LinkedIn
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>
