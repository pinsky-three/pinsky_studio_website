---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Exhibitions | Pinsky Studio - Past & Upcoming Shows">
    <main id="content" class="pt-16">
        <div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <section class="py-10">
                <h1
                    class="mb-5 text-xl font-medium text-gray-800 dark:text-neutral-200"
                >
                    Exhibitions
                </h1>

                <!-- Upcoming Exhibitions -->
                <div class="space-y-8">
                    <div>
                        <h2
                            class="text-lg font-medium text-gray-800 dark:text-neutral-200 mb-4"
                        >
                            Upcoming
                        </h2>
                        <div class="space-y-6">
                            <article class="group">
                                <div
                                    class="aspect-[4/3] rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                                >
                                    <img
                                        src="/placeholder-exhibition1.jpg"
                                        alt="Exhibition Preview"
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="mt-4">
                                    <h3
                                        class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                                    >
                                        Recursive Realities
                                    </h3>
                                    <p
                                        class="mt-1 text-sm text-gray-600 dark:text-neutral-400"
                                    >
                                        Contemporary Art Gallery, New York
                                    </p>
                                    <p
                                        class="mt-2 text-sm text-gray-500 dark:text-neutral-500"
                                    >
                                        Opening: June 15, 2024
                                    </p>
                                </div>
                            </article>
                        </div>
                    </div>

                    <!-- Past Exhibitions -->
                    <div>
                        <h2
                            class="text-lg font-medium text-gray-800 dark:text-neutral-200 mb-4"
                        >
                            Past Exhibitions
                        </h2>
                        <div class="space-y-6">
                            <article class="group">
                                <div
                                    class="aspect-[4/3] rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                                >
                                    <img
                                        src="/placeholder-exhibition2.jpg"
                                        alt="Exhibition Preview"
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="mt-4">
                                    <h3
                                        class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                                    >
                                        Digital Horizons
                                    </h3>
                                    <p
                                        class="mt-1 text-sm text-gray-600 dark:text-neutral-400"
                                    >
                                        Modern Art Museum, San Francisco
                                    </p>
                                    <p
                                        class="mt-2 text-sm text-gray-500 dark:text-neutral-500"
                                    >
                                        March - April 2024
                                    </p>
                                </div>
                            </article>

                            <article class="group">
                                <div
                                    class="aspect-[4/3] rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                                >
                                    <img
                                        src="/placeholder-exhibition3.jpg"
                                        alt="Exhibition Preview"
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="mt-4">
                                    <h3
                                        class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                                    >
                                        Algorithmic Aesthetics
                                    </h3>
                                    <p
                                        class="mt-1 text-sm text-gray-600 dark:text-neutral-400"
                                    >
                                        Tech Art Center, Berlin
                                    </p>
                                    <p
                                        class="mt-2 text-sm text-gray-500 dark:text-neutral-500"
                                    >
                                        January - February 2024
                                    </p>
                                </div>
                            </article>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>

