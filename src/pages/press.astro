---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Press | Pinsky Studio - Media Coverage & Resources">
    <main id="content" class="pt-16">
        <div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <section class="py-10">
                <h1
                    class="mb-5 text-xl font-medium text-gray-800 dark:text-neutral-200"
                >
                    Press
                </h1>

                <!-- Press Coverage -->
                <div class="space-y-8">
                    <div>
                        <h2
                            class="text-lg font-medium text-gray-800 dark:text-neutral-200 mb-6"
                        >
                            Recent Coverage
                        </h2>
                        <div class="space-y-6">
                            <article class="group">
                                <div class="flex items-start gap-x-4">
                                    <div
                                        class="shrink-0 w-16 h-16 rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                                    >
                                        <img
                                            src="/placeholder-press1.jpg"
                                            alt="Publication Logo"
                                            class="w-full h-full object-cover"
                                        />
                                    </div>
                                    <div>
                                        <h3
                                            class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                                        >
                                            The New Frontier of Digital Art
                                        </h3>
                                        <p
                                            class="mt-1 text-sm text-gray-600 dark:text-neutral-400"
                                        >
                                            Art & Technology Magazine
                                        </p>
                                        <p
                                            class="mt-2 text-sm text-gray-500 dark:text-neutral-500"
                                        >
                                            March 2024
                                        </p>
                                        <a
                                            href="#"
                                            class="mt-3 inline-flex items-center text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
                                        >
                                            Read Article
                                            <svg
                                                class="w-4 h-4 ml-1"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="1.5"
                                                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                                                ></path>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </article>

                            <article class="group">
                                <div class="flex items-start gap-x-4">
                                    <div
                                        class="shrink-0 w-16 h-16 rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                                    >
                                        <img
                                            src="/placeholder-press2.jpg"
                                            alt="Publication Logo"
                                            class="w-full h-full object-cover"
                                        />
                                    </div>
                                    <div>
                                        <h3
                                            class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                                        >
                                            Where Code Meets Canvas
                                        </h3>
                                        <p
                                            class="mt-1 text-sm text-gray-600 dark:text-neutral-400"
                                        >
                                            Contemporary Art Review
                                        </p>
                                        <p
                                            class="mt-2 text-sm text-gray-500 dark:text-neutral-500"
                                        >
                                            February 2024
                                        </p>
                                        <a
                                            href="#"
                                            class="mt-3 inline-flex items-center text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
                                        >
                                            Read Article
                                            <svg
                                                class="w-4 h-4 ml-1"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="1.5"
                                                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                                                ></path>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        </div>
                    </div>

                    <!-- Press Kit -->
                    <div>
                        <h2
                            class="text-lg font-medium text-gray-800 dark:text-neutral-200 mb-6"
                        >
                            Press Kit
                        </h2>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <a
                                href="#"
                                class="group block p-4 rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600"
                            >
                                <div class="flex items-center gap-x-3">
                                    <svg
                                        class="w-5 h-5 text-gray-500 dark:text-neutral-400"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                                        ></path>
                                    </svg>
                                    <span
                                        class="text-sm text-gray-600 dark:text-neutral-400"
                                        >Download Press Kit (PDF)</span
                                    >
                                </div>
                            </a>
                            <a
                                href="#"
                                class="group block p-4 rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600"
                            >
                                <div class="flex items-center gap-x-3">
                                    <svg
                                        class="w-5 h-5 text-gray-500 dark:text-neutral-400"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="1.5"
                                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                    <span
                                        class="text-sm text-gray-600 dark:text-neutral-400"
                                        >High-Res Images</span
                                    >
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- Contact -->
                    <div>
                        <h2
                            class="text-lg font-medium text-gray-800 dark:text-neutral-200 mb-4"
                        >
                            Press Contact
                        </h2>
                        <p class="text-sm text-gray-600 dark:text-neutral-400">
                            For press inquiries, please contact:
                        </p>
                        <a
                            href="mailto:bregy@minsky.cc"
                            class="mt-2 inline-block text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
                        >
                            bregy@minsky.cc
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>

