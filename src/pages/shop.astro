---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Shop | Pinsky Studio - Artworks & Prints">
    <main id="content" class="pt-16">
        <div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
            <section class="py-10">
                <h1
                    class="mb-5 text-xl font-medium text-gray-800 dark:text-neutral-200"
                >
                    Shop
                </h1>

                <!-- Featured Items -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <!-- Featured Item -->
                    <article class="group">
                        <div
                            class="aspect-square rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                        >
                            <img
                                src="/placeholder-shop1.jpg"
                                alt="Artwork Preview"
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            />
                        </div>
                        <div class="mt-4">
                            <h2
                                class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                            >
                                Recursive Pattern #1
                            </h2>
                            <p
                                class="mt-1 text-sm text-gray-600 dark:text-neutral-400"
                            >
                                Limited Edition Print
                            </p>
                            <p
                                class="mt-2 text-sm text-gray-500 dark:text-neutral-500"
                            >
                                Edition of 50
                            </p>
                            <div class="mt-4">
                                <button
                                    class="w-full px-4 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 dark:bg-white dark:text-gray-900 dark:hover:bg-gray-100 transition-colors"
                                >
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </article>

                    <!-- Featured Item -->
                    <article class="group">
                        <div
                            class="aspect-square rounded-lg overflow-hidden bg-gray-100 dark:bg-neutral-800"
                        >
                            <img
                                src="/placeholder-shop2.jpg"
                                alt="Artwork Preview"
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            />
                        </div>
                        <div class="mt-4">
                            <h2
                                class="text-lg font-medium text-gray-800 dark:text-neutral-200"
                            >
                                Digital Horizon #3
                            </h2>
                            <p
                                class="mt-1 text-sm text-gray-600 dark:text-neutral-400"
                            >
                                Limited Edition Print
                            </p>
                            <p
                                class="mt-2 text-sm text-gray-500 dark:text-neutral-500"
                            >
                                Edition of 50
                            </p>
                            <div class="mt-4">
                                <button
                                    class="w-full px-4 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg hover:bg-gray-800 dark:bg-white dark:text-gray-900 dark:hover:bg-gray-100 transition-colors"
                                >
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </article>
                </div>

                <!-- Categories -->
                <div class="mt-12">
                    <h2
                        class="text-sm font-medium text-gray-800 dark:text-neutral-200 mb-4"
                    >
                        Browse by Category:
                    </h2>
                    <div class="flex flex-wrap gap-2">
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            All
                        </button>
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            Limited Editions
                        </button>
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            Prints
                        </button>
                        <button
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-neutral-800 dark:text-neutral-200 dark:hover:bg-neutral-700"
                        >
                            Digital Downloads
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>

