---
import Layout from "../layouts/Layout.astro";
import { Squares } from "../components/ui/squares-background";
---

<Layout title="Pinsky Studio - Digital Art & Algorithmic Creativity">
  <!-- Fixed Fullscreen Squares Background -->
  <div class="fixed inset-0 z-0">
    <Squares client:load />
  </div>

  <!-- Hero Content Section -->
  <section class="relative z-10 flex min-h-screen flex-col items-center justify-center overflow-hidden px-4 text-center">
    <!-- Overlay gradient for better text readability (local to this section) -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/60 pointer-events-none"></div>
    
    <!-- Hero Text & Buttons Container (relative to allow z-indexing above overlay) -->
    <div class="relative z-20"> {/* Ensures content is above the section's local overlay */}
      <h1 class="text-4xl font-bold tracking-tight text-white md:text-6xl lg:text-7xl mb-6">
        Pinsky Studio
      </h1>
      <p class="mx-auto mb-8 max-w-2xl text-lg leading-relaxed text-white/90 md:text-2xl">
        Exploring the intersection of algorithmic processes, formal systems, and tangible art
      </p>
      <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
        <a 
          href="/portfolio" 
          class="px-8 py-3 font-medium text-gray-900 bg-white rounded-lg shadow-lg transition-colors duration-200 hover:bg-white/90"
        >
          Explore Portfolio
        </a>
        <a 
          href="/commissions" 
          class="px-8 py-3 font-medium text-white bg-transparent border-2 border-white rounded-lg transition-colors duration-200 hover:bg-white/10"
        >
          Commission Art
        </a>
      </div>
    </div>
  </section>

  <!-- Main Page Content -->
  <main class="relative z-10 bg-white dark:bg-black"> {/* Ensures this is above fixed gradient and has a background */}
    <div class="w-full max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- PORTAL SECTIONS -->
      <section class="py-16 border-b border-gray-200 dark:border-neutral-800">
        <h2 class="mb-8 text-xl font-medium text-gray-800 dark:text-neutral-200">
          Explore Our Digital Ecosystem
        </h2>
        <div class="grid grid-cols-1 gap-8">
          <!-- Studio Portal -->
          <a
            href="/studio"
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1585159812596-fac104f2f069?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="The Computational Atelier"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                The Computational Atelier
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                Where formal systems become visual structure. Explore the
                underlying code, interactive simulations, and documentation of our
                algorithmic processes.
              </p>
            </div>
          </a>

          <!-- Curated Constructs Portal -->
          <a
            href="/curated-constructs"
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1616427592793-67b858804534?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="Curated Constructs"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                Curated Constructs
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                Explore the six thematic pathways that define our artistic
                practice. Each construct represents a unique exploration of formal
                systems and visual expression.
              </p>
            </div>
          </a>

          <!-- Conceptual Pathways Portal -->
          <a
            href="/conceptual-pathways"
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1516131206008-dd041a9764fd?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="Conceptual Pathways"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                Conceptual Pathways
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                Navigate our artistic practice through abstract concepts and media
                types. Discover connections between ideas and explore how they
                manifest across different mediums.
              </p>
            </div>
          </a>

          <!-- Studio Lab Portal -->
          <a
            href="/studio-lab"
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1656618724305-a4257e46e847?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="Studio Lab"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                Studio Lab
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                Experimental space for testing new ideas, techniques, and
                technologies. Witness the evolution of our creative process
                through ongoing experiments and prototypes.
              </p>
            </div>
          </a>

          <!-- Marketplace Portal -->
          <a
            href="/marketplace"
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1707760696486-2a2cd7e0b6a6?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="Marketplace"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                Marketplace
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                Acquire original works, limited editions, and prints that embody
                our exploration of algorithmic processes and formal systems.
              </p>
            </div>
          </a>

          <!-- Connect Portal -->
          <a
            href="/connect"
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1654131300276-db70adf4f85d?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="Connect"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                Connect
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                Engage with our work through exhibitions, workshops, and
                collaborations. Join our community of artists, technologists, and
                creative thinkers.
              </p>
            </div>
          </a>
        </div>
      </section>
      <!-- END PORTAL SECTIONS -->

      <!-- FEATURED WORK SECTION -->
      <section class="py-16 border-b border-gray-200 dark:border-neutral-800">
        <h2 class="mb-8 text-xl font-medium text-gray-800 dark:text-neutral-200">
          Featured Work
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <a
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
            href="#"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1516131206008-dd041a9764fd?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="Recursive Pattern #1"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                Recursive Pattern #1
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                A visualization of recursive processes in nature, where simple
                rules create complex forms.
              </p>
              <div class="mt-2 flex flex-wrap gap-1">
                <span
                  class="px-2 py-0.5 text-xs font-medium text-gray-800 bg-gray-100 rounded dark:text-white dark:bg-neutral-800"
                  >Recursion</span
                >
                <span
                  class="px-2 py-0.5 text-xs font-medium text-gray-800 bg-gray-100 rounded dark:text-white dark:bg-neutral-800"
                  >Plotter Drawing</span
                >
              </div>
            </div>
          </a>
          <a
            class="group block relative overflow-hidden rounded-lg border border-gray-200 dark:border-neutral-700 hover:border-gray-300 dark:hover:border-neutral-600 transition-colors"
            href="#"
          >
            <img
              class="w-full h-40 object-cover bg-gray-100 rounded-t-lg dark:bg-neutral-800"
              src="https://images.unsplash.com/photo-1656618724305-a4257e46e847?q=80&w=320&auto=format&fit=crop&ixlib=rb-4.0.3"
              alt="Emergent Structures #3"
            />
            <div
              class="absolute bottom-1 right-1 opacity-0 group-hover:opacity-100 transition"
            >
              <div
                class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200"
              >
                <svg
                  class="w-3.5 h-3.5"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12H9m6 0l-3-3m3 3l-3 3"
                  />
                </svg>
                <span class="text-xs">View</span>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-sm font-medium text-gray-800 dark:text-white">
                Emergent Structures #3
              </h3>
              <p class="text-xs text-gray-600 dark:text-neutral-400 mt-1">
                Exploring how complex patterns emerge from simple interactions
                between elements.
              </p>
              <div class="mt-2 flex flex-wrap gap-1">
                <span
                  class="px-2 py-0.5 text-xs font-medium text-gray-800 bg-gray-100 rounded dark:text-white dark:bg-neutral-800"
                  >Emergence</span
                >
                <span
                  class="px-2 py-0.5 text-xs font-medium text-gray-800 bg-gray-100 rounded dark:text-white dark:bg-neutral-800"
                  >Digital Art</span
                >
              </div>
            </div>
          </a>
        </div>
      </section>
      <!-- END FEATURED WORK SECTION -->

      <!-- ABOUT SECTION -->
      <section class="py-16 border-b border-gray-200 dark:border-neutral-800">
        <h2 class="mb-8 text-xl font-medium text-gray-800 dark:text-neutral-200">
          About Pinsky Studio
        </h2>
        <p class="text-sm text-gray-600 dark:text-neutral-400 max-w-2xl">
          Pinsky Studio is the creative practice of Bregy Malpartida, exploring
          the intersection of algorithmic processes, formal systems, and tangible
          art. Our work investigates how mathematical concepts and computational
          methods can be expressed through visual and physical mediums.
        </p>
        <p class="text-sm text-gray-600 dark:text-neutral-400 max-w-2xl mt-3">
          Through a combination of custom plotter technology, traditional painting
          techniques, and digital processes, we create works that bridge the gap
          between the digital and physical worlds. Our practice is driven by a
          fascination with emergence, recursion, and the patterns that arise from
          simple rules applied iteratively.
        </p>
        <p class="text-sm text-gray-600 dark:text-neutral-400 max-w-2xl mt-3">
          Each piece is an exploration of formal systems and their visual
          manifestations, inviting viewers to engage with the underlying concepts
          through both aesthetic experience and intellectual inquiry.
        </p>
        <div class="mt-6">
          <a
            href="/about"
            class="px-4 py-2 text-sm font-medium text-gray-800 bg-white hover:bg-gray-50 dark:bg-neutral-800 dark:text-white dark:hover:bg-neutral-700 border border-gray-200 dark:border-neutral-700 rounded-lg transition-colors inline-flex items-center gap-x-1"
          >
            Learn more about our practice
            <svg
              class="w-4 h-4"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </section>
      <!-- END ABOUT SECTION -->

      <!-- CONTACT SECTION -->
      <section class="py-16">
        <h2 class="mb-8 text-xl font-medium text-gray-800 dark:text-neutral-200">
          Contact
        </h2>
        <p class="text-sm text-gray-600 dark:text-neutral-400 max-w-2xl">
          Interested in my work or looking to collaborate? Get in touch:
        </p>
        <ul class="mt-4 space-y-3">
          <li class="flex items-center gap-x-2">
            <svg
              class="shrink-0 w-4 h-4 text-gray-800 dark:text-neutral-200"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 12H8m6 0l-3-3m3 3l-3 3"></path>
            </svg>
            <a
              class="text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
              href="mailto:bregy@minsky.cc">bregy@minsky.cc</a
            >
          </li>
          <li class="flex items-center gap-x-2">
            <svg
              class="shrink-0 w-4 h-4 text-gray-800 dark:text-neutral-200"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"
              ></path>
            </svg>
            <a
              class="text-sm text-gray-600 hover:text-gray-800 dark:text-neutral-400 dark:hover:text-white"
              href="https://pinsky.studio"
              target="_blank"
              rel="noopener noreferrer">pinsky.studio</a
            >
          </li>
        </ul>
      </section>
      <!-- END CONTACT SECTION -->
    </div>
  </main>
</Layout>

<!-- Add script to handle banner closing -->
<script>
  const closeButton = document.getElementById('close-banner');
  const banner = closeButton?.closest('.mb-8') as HTMLElement;
  
  closeButton?.addEventListener('click', function() {
    if (banner) {
      banner.style.display = 'none';
    }
  });
</script>
